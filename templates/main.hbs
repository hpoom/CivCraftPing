<div class="row-fluid">
	{{#if home}}
		<div class="span6"><h1>HOME</h1>Will write a real intro soon...</div>
		<div class="span6 well news accordion" id="accordionNews"></div>
	{{/if}}
	{{#if stats}}
		<div class="span12">
			<div class="row-fluid" id="stats">
			</div>
			<div class="row-fluid" id="statsGraph">
				<div class="span12" >
					<div class="btn-group">
						<a href="#stats" class="btn btn-mini{{#unless graphTime}} active{{/unless}}">6h</a>
						<a href="#stats/24" class="btn btn-mini{{#compare 24 graphTime operator="=="}} active{{/compare}}">24h</a>
						<a href="#stats/72" class="btn btn-mini{{#compare 72 graphTime operator="=="}} active{{/compare}}">3 days</a>
						<a href="#stats/168" class="btn btn-mini{{#compare 168 graphTime operator="=="}} active{{/compare}}">7 days</a>
					</div>
					<small>Chunks currently show as % assuming 50k chunks is 100%. Player numbers currently show as % assuming 300 players is 100%. Mob numbers currently show as % assuming 5000 mobs is 100%</small>
					<svg style="height: 500px;display:block;width: 100%;"></svg>
				</div>
			</div>
		</div>
	{{/if}}
	{{#if players}}
		<div class="span6 online"></div>
		<div class="span6 search">
			<form class="form-inline">
				<label for="playerSearch">Player search </label> 
				<input type="text" id="playerSearch" class="input-medium search-query" data-provide="type-ahead" class="typeahead" autocomplete="off" />  
			</form>
			<div class="playerInfoList"></div>
		</div>
	{{/if}}
	{{#if bounties}}
		<div class="span12"><h1>Bounties coming soon...</h1></div>
	{{/if}}
	{{#if trade}}
		<div class="span12 search">
			<form class="form-inline form-search pull-left" id="blockSearchForm">
				<div class="input-append">
					<input type="text" id="blockSearch" class="input-medium search-query" placeholder="Enter block name..." data-provide="type-ahead" class="typeahead" autocomplete="off" />
					<button class="btn" type="button">Search</button>
				</div>
				<span id="itemImage"></span>
			</form>
			<a href="http://civtrade.herokuapp.com/shops/new" target="_blank" class="btn pull-right">Add Shop to CivTrade</a>
		</div>
		<div class="row-fluid">
			<div class="span6">
				<div class="exchange"></div>
			</div>
			<div class="span6">
				<div class="civTrade"></div>
			</div>
		</div>
	{{/if}}
	{{#if locations}}
		<div class="span6" id="locations"></div>
	{{/if}}
</div>