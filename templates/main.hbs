<div class="row-fluid">
	{{#if stats}}
		<div class="span12">
			<div class="row-fluid" id="stats">
			</div>
			<div class="row-fluid" id="statsGraph">
				<div class="span12" >
					<svg style="height: 500px;display:block;width: 100%;"></svg>
					<small>Chunks currently show as % assuming 50k chunks is 100%. Player numbers currently show as % assuming 300 players is 100%. Mob numbers currently show as % assuming 5000 mobs is 100%</small>
				</div>
			</div>
		</div>
	{{/if}}
	{{#if players}}
		<div class="span6 online"></div>
		<div class="span6 graph" id="liveChart"></div>
	{{/if}}
	{{#if bounties}}
		<div class="span12"><h1>Bounties coming soon...</h1></div>
	{{/if}}
	{{#if trade}}
		<div class="span12"><h1>Trade coming soon...</h1></div>
	{{/if}}
	{{#if locations}}
		<div class="span6" id="locations"></div>
	{{/if}}
</div>